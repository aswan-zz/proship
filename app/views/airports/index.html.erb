<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
          <div id="types_table" class="body_column one_hundred">
            <div class="column_header">
            	Listing Airports
            </div>
            <div class="body_column_content" id="availability_types_form">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Country</th>
      <th>Iata faa</th>
      <th>Iaco</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Altitude</th>
      <th>Zone</th>
      <th>Dst</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.name %></td>
        <td><%= airport.city %></td>
        <td><%= airport.country %></td>
        <td><%= airport.iata_faa %></td>
        <td><%= airport.iaco %></td>
        <td><%= airport.latitude %></td>
        <td><%= airport.longitude %></td>
        <td><%= airport.altitude %></td>
        <td><%= airport.zone %></td>
        <td><%= airport.dst %></td>
        <td><%= link_to 'Show', airport %></td>
        <td><%= link_to 'Edit', edit_airport_path(airport) %></td>
        <td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airport', new_airport_path, class: "new_button" %>

</div>
</div>
