          <div id="body_essentials" class="body_column body_column_left">
            <div class="column_header">Essentials
            	<div class="edit"><%= link_to image_tag("edit_pencil.png", {height: 14}), edit_member_path(@member) %></div>
            </div>
            <div class="body_column_content">
<p>
  <em>Main Phone</em>
  <span class="candidate_info"><%= number_to_phone(@member.main_phone, area_code: true) %></span>
</p>

<p>
  <em>Main Mobile *</em>
  <span class="candidate_info"><%= number_to_phone(@member.main_mobile, area_code: true) %></span>
</p>

<p>
  <em>Email</em>
  <span class="candidate_info"><%= @member.email %></span>
</p>

<p>
  <em>Address</em>
  <span class="candidate_info"><%= @member.address %>
  	<br/><%= @member.city %>, 
  		<%= @member.state_prov.name unless @member.state_prov == nil %>, 
  		<%= @member.country.name unless @member.country == nil %>
  	<br/><%= @member.zip_post %>
  </span>
</p>

<p>
  <em>Residency</em>
  <span class="candidate_info"><%= @member.residency.name unless @member.residency == nil %></span>
</p>

<p>
  <em>Citizenship</em>
  <span class="candidate_info"><%= @member.citizenship.name  unless @member.citizenship == nil %></span>
</p>

<p>
  <em>Birthday</em>
  <span class="candidate_info"><%= @member.birthday %></span>
</p>

<p>
  <em>Home airport</em>
  <span class="candidate_info"><%= @member.home_airport %></span>
</p>

<p>
  <em>Medical conditions</em>
  <span class="candidate_info"><%= @member.medical_conditions %></span>
</p>

<p>
  <em>Criminal convictions</em>
  <span class="candidate_info"><%= @member.criminal_convictions %></span>
</p>

<p>
  <em>Employee number</em>
  <span class="candidate_info"><%= @member.employee_number %></span>
</p>

            </div>
          </div>
